/*
QHeaderView
*/

QHeaderView::section {
        background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                        stop: 0 #323232, stop: 0.4 #000000, stop: 1 #000000);
        color: #eeeeee;
        padding-left: 4px;
        border: 1px solid #6b6b6b;
}


/*
QProgressBar
*/

QProgressBar {
        border: 1px solid #6b6b6b;
        border-radius: 4px;
        text-align: center;
        color: #dddddd;
        background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                        stop: 0 #323232, stop: 0.4 #000000, stop: 1 #000000);
}

QProgressBar:chunk {
        background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                        stop: 0 #2c72c7, stop: 1 #0057ae);
        border: 2px solid #6193cf;
        border-radius: 2px;
        margin: 2px;
}


/* 
QScollbars
*/

QScrollBar:vertical {
        width: 16px;
        margin: 16px 0 16px 0;
        background-color: #000000;
}

QScrollBar::handle:vertical {
        min-height: 16px;
        border: 1px solid #6b6b6b;;
        background-color: #323232;
        border-radius: 3px;
        margin-right: 1px;
}

QScrollBar::handle:vertical:hover {
        min-height: 16px;
        border: 1px solid #808080;;
        background-color:  #323232;
        border-radius: 3px;
        margin-right: 1px;
}

QScrollBar::add-line:vertical {
        border: none;
        height: 16px;
        subcontrol-position: bottom;
        subcontrol-origin: margin;
}

QScrollBar::sub-line:vertical {
        border: none;
        height: 16px;
        subcontrol-position: top;
        subcontrol-origin: margin;
}

QScrollBar::up-arrow:vertical {
        background-image: url(:/Images/images/arrow-up.png);
}

QScrollBar::down-arrow:vertical {
        background-image: url(:/Images/images/arrow-down.png);
}

QScrollBar:horizontal {
        height: 16px;
        margin: 0 16px 0 16px;
        background-color: #000000;
}

QScrollBar::handle:horizontal {
        min-width: 16px;
        border: 2px solid #6b6b6b;;
        background-color:  #323232;
        border-radius: 3px;
}

QScrollBar::handle:horizontal:hover {
        min-width: 16px;
        border: 2px solid #808080;;
        background-color:  #323232;
        border-radius: 3px;
}

QScrollBar::add-line:horizontal {
        border: none;
        background: transparent;
        width: 16px;
        subcontrol-position: right;
        subcontrol-origin: margin;
}

QScrollBar::sub-line:horizontal {
        border: none;
        width: 16px;
        subcontrol-position: left;
        subcontrol-origin: margin;
}

QScrollBar::right-arrow:horizontal {
        background-image: url(:/Images/images/arrow-right.png);
}

QScrollBar::left-arrow:horizontal {
        background-image: url(:/Images/images/arrow-left.png);
}


/*
QToolButtons
 */

QToolButton {
        color: white;
}


/*
QSliders
*/

QSlider::groove:horizontal {
border: 1px solid #333333;
height: 3px;
background: qlineargradient(x1:0, y1:0, x2:1, y2:1, stop:0 #666666, stop:1 #CCCCCC);
position: absolute;
left: 6px; right: 8px;
}

QSlider::handle:horizontal {
background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #CCCCCC,
                                                    stop:0.2 #444444,
                                                    stop:0.6 #000000,
                                                    stop:1 #333333);
border: 1px solid #000000;
height: 14px;
width: 10px;
margin: -8px 0;
border-radius: 4px;
}

QSlider::groove:vertical {
border: 1px solid #333333;
width: 3px;
background: qlineargradient(x1:0, y1:0, x2:1, y2:1, stop:0 #666666, stop:1 #CCCCCC);
position: absolute;
left: 6px; right: 8px;
}

QSlider::handle:vertical {
height: 10px;
background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #CCCCCC,
                                                    stop:0.2 #444444,
                                                    stop:0.6 #000000,
                                                    stop:1 #333333);
border: 1px solid #000000;
margin: 0 -8px;
border-radius: 4px;
}
